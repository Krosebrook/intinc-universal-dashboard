# ============================================================================
# Git Workflow Automation - Configuration Template
# ============================================================================
# Copy this file to refactor-config.env and customize for your project
# All variables with default values can be left as-is or customized
# ============================================================================

# ----------------------------------------------------------------------------
# REPOSITORY INFORMATION
# ----------------------------------------------------------------------------
# GitHub repository owner (organization or username)
REPO_OWNER="your-github-username"

# Repository name
REPO_NAME="your-repository-name"

# Main branch name (default: main)
MAIN_BRANCH="main"

# Development branch name (default: development)
DEV_BRANCH="development"

# Production branch name (default: production)
PROD_BRANCH="production"

# ----------------------------------------------------------------------------
# PROJECT CONFIGURATION
# ----------------------------------------------------------------------------
# Project type: nextjs-pwa, react-spa, react-native, python-api, rust-cli, node-api
PROJECT_TYPE="nextjs-pwa"

# Primary programming language: typescript, javascript, python, rust, go, java
PRIMARY_LANGUAGE="typescript"

# Package manager: npm, yarn, pnpm, pip, poetry, cargo, go
PACKAGE_MANAGER="npm"

# ----------------------------------------------------------------------------
# BUILD & TEST COMMANDS
# ----------------------------------------------------------------------------
# Command to install dependencies
INSTALL_CMD="npm install"

# Command to build the project
BUILD_CMD="npm run build"

# Command to run tests
TEST_CMD="npm test"

# Command to run linter
LINT_CMD="npm run lint"

# Command to run type checking (if applicable)
TYPE_CHECK_CMD="npm run lint:types"

# ----------------------------------------------------------------------------
# BRANCH PROTECTION SETTINGS
# ----------------------------------------------------------------------------
# Production branch: Require pull request reviews before merging
PROD_REQUIRE_REVIEWS=true
PROD_REQUIRED_APPROVALS=2

# Production: Require signed commits
PROD_REQUIRE_SIGNED_COMMITS=true

# Production: Require status checks to pass
PROD_REQUIRE_STATUS_CHECKS=true

# Production: Required status check contexts (comma-separated)
PROD_REQUIRED_CHECKS="test,build,security-scan,lint"

# Main branch: Require pull request reviews
MAIN_REQUIRE_REVIEWS=true
MAIN_REQUIRED_APPROVALS=1

# Main: Require status checks
MAIN_REQUIRE_STATUS_CHECKS=true
MAIN_REQUIRED_CHECKS="test,build,lint"

# Development branch: Require status checks only
DEV_REQUIRE_STATUS_CHECKS=true
DEV_REQUIRED_CHECKS="test,lint"

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
# Enable Dependabot security updates
ENABLE_DEPENDABOT=true

# Enable CodeQL security scanning
ENABLE_CODEQL=true

# Enable secret scanning
ENABLE_SECRET_SCANNING=true

# Require CODEOWNERS approval
REQUIRE_CODEOWNERS=true

# CODEOWNERS file path (relative to repo root)
CODEOWNERS_PATH=".github/CODEOWNERS"

# ----------------------------------------------------------------------------
# CI/CD PROVIDER
# ----------------------------------------------------------------------------
# CI/CD provider: github-actions, gitlab-ci, circleci, jenkins, travis
CI_PROVIDER="github-actions"

# Enable automatic deployments
ENABLE_AUTO_DEPLOY=true

# ----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# ----------------------------------------------------------------------------
# Development environment deployment URL
DEV_DEPLOY_URL="https://dev.example.com"

# Staging environment deployment URL
STAGING_DEPLOY_URL="https://staging.example.com"

# Production environment deployment URL
PROD_DEPLOY_URL="https://example.com"

# Deployment platform: vercel, netlify, aws, gcp, azure, heroku, docker, custom
DEPLOY_PLATFORM="vercel"

# Auto-deploy development branch
AUTO_DEPLOY_DEV=true

# Auto-deploy main branch to staging
AUTO_DEPLOY_STAGING=true

# Require manual approval for production deployments
PROD_MANUAL_APPROVAL=true

# ----------------------------------------------------------------------------
# NOTIFICATION SETTINGS
# ----------------------------------------------------------------------------
# Slack webhook URL for notifications (optional)
SLACK_WEBHOOK_URL=""

# Discord webhook URL for notifications (optional)
DISCORD_WEBHOOK_URL=""

# Email for critical notifications
NOTIFICATION_EMAIL=""

# ----------------------------------------------------------------------------
# DOCKER SETTINGS (if applicable)
# ----------------------------------------------------------------------------
# Docker registry: dockerhub, ghcr, gcr, ecr
DOCKER_REGISTRY="ghcr"

# Docker image name
DOCKER_IMAGE_NAME="${REPO_OWNER}/${REPO_NAME}"

# ----------------------------------------------------------------------------
# ADDITIONAL SETTINGS
# ----------------------------------------------------------------------------
# Require linear history (no merge commits)
REQUIRE_LINEAR_HISTORY=false

# Allow squash merging
ALLOW_SQUASH_MERGE=true

# Allow merge commits
ALLOW_MERGE_COMMIT=true

# Allow rebase merging
ALLOW_REBASE_MERGE=true

# Automatically delete head branches after merge
DELETE_BRANCH_ON_MERGE=true

# ----------------------------------------------------------------------------
# AI REFACTORING SETTINGS
# ----------------------------------------------------------------------------
# AI provider for refactoring: claude, codex, gemini
AI_PROVIDER="claude"

# Model to use: claude-3-opus, claude-3-sonnet, gpt-4, gemini-pro
AI_MODEL="claude-3-sonnet"

# Maximum tokens for AI responses
AI_MAX_TOKENS=4000

# Temperature for AI responses (0.0 - 1.0)
AI_TEMPERATURE=0.2
