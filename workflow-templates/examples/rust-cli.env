# ============================================================================
# Rust CLI Application - Configuration Example
# ============================================================================
# Configuration for Rust command-line applications with cross-compilation
# ============================================================================

# ----------------------------------------------------------------------------
# REPOSITORY INFORMATION
# ----------------------------------------------------------------------------
REPO_OWNER="your-github-username"
REPO_NAME="rust-cli-tool"
MAIN_BRANCH="main"
DEV_BRANCH="development"
PROD_BRANCH="production"

# ----------------------------------------------------------------------------
# PROJECT CONFIGURATION
# ----------------------------------------------------------------------------
PROJECT_TYPE="rust-cli"
PRIMARY_LANGUAGE="rust"
PACKAGE_MANAGER="cargo"

# Rust version
RUST_VERSION="stable"
RUST_EDITION="2021"

# ----------------------------------------------------------------------------
# BUILD & TEST COMMANDS
# ----------------------------------------------------------------------------
INSTALL_CMD="cargo fetch"
BUILD_CMD="cargo build --release"
TEST_CMD="cargo test"
LINT_CMD="cargo clippy --all-targets --all-features -- -D warnings"
TYPE_CHECK_CMD="cargo check"

# Additional Rust commands
FORMAT_CMD="cargo fmt --all -- --check"
AUDIT_CMD="cargo audit"
BENCH_CMD="cargo bench"

# ----------------------------------------------------------------------------
# RUST SPECIFIC SETTINGS
# ----------------------------------------------------------------------------
# Code formatting
USE_RUSTFMT=true
RUSTFMT_EDITION="2021"

# Linting with Clippy
USE_CLIPPY=true
CLIPPY_PEDANTIC=true
CLIPPY_DENY_WARNINGS=true

# Documentation
BUILD_DOCS=true
DOC_PRIVATE_ITEMS=false

# ----------------------------------------------------------------------------
# CROSS-COMPILATION SETTINGS
# ----------------------------------------------------------------------------
# Target platforms for releases
TARGET_PLATFORMS="x86_64-unknown-linux-gnu,x86_64-unknown-linux-musl,x86_64-apple-darwin,aarch64-apple-darwin,x86_64-pc-windows-gnu"

# Linux targets
LINUX_GNU_TARGET="x86_64-unknown-linux-gnu"
LINUX_MUSL_TARGET="x86_64-unknown-linux-musl"
LINUX_ARM_TARGET="aarch64-unknown-linux-gnu"

# macOS targets
MACOS_X86_TARGET="x86_64-apple-darwin"
MACOS_ARM_TARGET="aarch64-apple-darwin"

# Windows targets
WINDOWS_TARGET="x86_64-pc-windows-gnu"

# ----------------------------------------------------------------------------
# TESTING CONFIGURATION
# ----------------------------------------------------------------------------
# Test coverage
USE_TARPAULIN=true
COVERAGE_THRESHOLD=80

# Integration tests
RUN_INTEGRATION_TESTS=true
RUN_DOC_TESTS=true

# Benchmark tests
RUN_BENCHMARKS=false
BENCHMARK_ON_PR=false

# ----------------------------------------------------------------------------
# BRANCH PROTECTION SETTINGS
# ----------------------------------------------------------------------------
PROD_REQUIRE_REVIEWS=true
PROD_REQUIRED_APPROVALS=2
PROD_REQUIRE_SIGNED_COMMITS=true
PROD_REQUIRE_STATUS_CHECKS=true
PROD_REQUIRED_CHECKS="test,clippy,fmt,audit,build-linux,build-macos,build-windows"

MAIN_REQUIRE_REVIEWS=true
MAIN_REQUIRED_APPROVALS=1
MAIN_REQUIRE_STATUS_CHECKS=true
MAIN_REQUIRED_CHECKS="test,clippy,fmt"

DEV_REQUIRE_STATUS_CHECKS=true
DEV_REQUIRED_CHECKS="test,clippy"

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
ENABLE_DEPENDABOT=true
ENABLE_CODEQL=true
ENABLE_SECRET_SCANNING=true
REQUIRE_CODEOWNERS=true
CODEOWNERS_PATH=".github/CODEOWNERS"

# Rust security auditing
RUN_CARGO_AUDIT=true
RUN_CARGO_DENY=true

# Dependency check
USE_CARGO_OUTDATED=true
UPDATE_DEPENDENCIES_AUTO=false

# ----------------------------------------------------------------------------
# CI/CD PROVIDER
# ----------------------------------------------------------------------------
CI_PROVIDER="github-actions"
ENABLE_AUTO_DEPLOY=true

# Use cross for cross-compilation
USE_CROSS=true

# ----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# ----------------------------------------------------------------------------
# Package registries
PUBLISH_TO_CRATES_IO=true
CRATES_IO_TOKEN_SECRET="CARGO_REGISTRY_TOKEN"

# Binary distribution
DISTRIBUTE_BINARIES=true
BINARY_DISTRIBUTION_PLATFORMS="linux,macos,windows"

# Homebrew tap (for macOS)
HOMEBREW_TAP_REPO="your-org/homebrew-tools"
HOMEBREW_FORMULA_NAME="rust-cli-tool"

# Deployment platform
DEPLOY_PLATFORM="github-releases"

# Auto-deploy settings
AUTO_DEPLOY_DEV=false
AUTO_DEPLOY_STAGING=false
PROD_MANUAL_APPROVAL=true

# ----------------------------------------------------------------------------
# GITHUB RELEASES CONFIGURATION
# ----------------------------------------------------------------------------
# Release automation
CREATE_GITHUB_RELEASE=true
RELEASE_DRAFT=false
RELEASE_PRERELEASE=false

# Asset naming
BINARY_NAME="rust-cli-tool"
ASSET_NAME_TEMPLATE="${BINARY_NAME}-${VERSION}-${TARGET}"

# Archive format
LINUX_ARCHIVE_FORMAT="tar.gz"
MACOS_ARCHIVE_FORMAT="tar.gz"
WINDOWS_ARCHIVE_FORMAT="zip"

# Include in release
INCLUDE_LICENSE=true
INCLUDE_README=true
INCLUDE_CHANGELOG=true
INCLUDE_COMPLETION_SCRIPTS=true

# ----------------------------------------------------------------------------
# BINARY OPTIMIZATION
# ----------------------------------------------------------------------------
# Release profile optimizations
OPT_LEVEL=3
LTO="fat"
CODEGEN_UNITS=1
STRIP_SYMBOLS=true
PANIC_STRATEGY="abort"

# Size optimization
OPTIMIZE_FOR_SIZE=false
USE_UPX=true
UPX_LEVEL=9

# ----------------------------------------------------------------------------
# DOCKER SETTINGS (if containerizing)
# ----------------------------------------------------------------------------
DOCKER_REGISTRY="ghcr"
DOCKER_IMAGE_NAME="${REPO_OWNER}/${REPO_NAME}"
DOCKER_BASE_IMAGE="rust:${RUST_VERSION}-slim"

# Multi-stage Docker build
DOCKER_USE_MULTI_STAGE=true
DOCKER_RUNTIME_IMAGE="debian:bookworm-slim"

# ----------------------------------------------------------------------------
# DOCUMENTATION
# ----------------------------------------------------------------------------
# Generate docs
GENERATE_DOCS=true
DOCS_DEPLOY_TO_GITHUB_PAGES=true

# CLI documentation
GENERATE_MAN_PAGES=true
GENERATE_COMPLETION_SCRIPTS=true
COMPLETION_SHELLS="bash,zsh,fish,powershell"

# README badges
INCLUDE_CI_BADGE=true
INCLUDE_CRATES_IO_BADGE=true
INCLUDE_DOCS_RS_BADGE=true
INCLUDE_LICENSE_BADGE=true

# ----------------------------------------------------------------------------
# CRATES.IO METADATA
# ----------------------------------------------------------------------------
CRATE_NAME="rust-cli-tool"
CRATE_VERSION="0.1.0"
CRATE_DESCRIPTION="A powerful CLI tool written in Rust"
CRATE_LICENSE="MIT OR Apache-2.0"
CRATE_HOMEPAGE="https://github.com/${REPO_OWNER}/${REPO_NAME}"
CRATE_REPOSITORY="https://github.com/${REPO_OWNER}/${REPO_NAME}"
CRATE_DOCUMENTATION="https://docs.rs/${CRATE_NAME}"
CRATE_KEYWORDS="cli,tool,rust"
CRATE_CATEGORIES="command-line-utilities"

# ----------------------------------------------------------------------------
# DEPENDENCY MANAGEMENT
# ----------------------------------------------------------------------------
# Feature flags
DEFAULT_FEATURES=true
FEATURE_FLAGS="cli,config,logging"

# Dependency updates
AUTO_UPDATE_PATCH_VERSIONS=false
NOTIFY_ON_OUTDATED_DEPS=true

# ----------------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------------
# Logging framework
USE_TRACING=true
USE_ENV_LOGGER=false

# Log levels
DEFAULT_LOG_LEVEL="info"
DEBUG_LOG_LEVEL="debug"

# Error reporting
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_SERVICE="sentry"
SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# ----------------------------------------------------------------------------
# NOTIFICATION SETTINGS
# ----------------------------------------------------------------------------
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
DISCORD_WEBHOOK_URL=""
NOTIFICATION_EMAIL="rust-team@example.com"

# Release notifications
NOTIFY_ON_RELEASE=true
NOTIFY_ON_CRATES_IO_PUBLISH=true

# ----------------------------------------------------------------------------
# INSTALLATION METHODS
# ----------------------------------------------------------------------------
# Package managers
PUBLISH_TO_HOMEBREW=true
PUBLISH_TO_SCOOP=true
PUBLISH_TO_CHOCOLATEY=false
PUBLISH_TO_SNAP=false

# Direct download
PROVIDE_INSTALL_SCRIPT=true
INSTALL_SCRIPT_NAME="install.sh"

# ----------------------------------------------------------------------------
# VERSIONING
# ----------------------------------------------------------------------------
# Semantic versioning
VERSION_STRATEGY="semantic"
AUTO_INCREMENT_VERSION=false

# Version from git tags
VERSION_FROM_GIT_TAG=true
TAG_PREFIX="v"

# Changelog generation
GENERATE_CHANGELOG=true
CHANGELOG_FORMAT="keepachangelog"
CHANGELOG_FILE="CHANGELOG.md"

# ----------------------------------------------------------------------------
# ADDITIONAL SETTINGS
# ----------------------------------------------------------------------------
REQUIRE_LINEAR_HISTORY=false
ALLOW_SQUASH_MERGE=true
ALLOW_MERGE_COMMIT=false
ALLOW_REBASE_MERGE=true
DELETE_BRANCH_ON_MERGE=true

# ----------------------------------------------------------------------------
# PERFORMANCE & PROFILING
# ----------------------------------------------------------------------------
# Profiling
ENABLE_PROFILING=false
PROFILER_TOOL="flamegraph"

# Performance benchmarks
RUN_PERFORMANCE_BENCHMARKS=true
BENCHMARK_COMPARISON=true

# ----------------------------------------------------------------------------
# CODE QUALITY TOOLS
# ----------------------------------------------------------------------------
# Additional Rust tools
USE_CARGO_DENY=true
USE_CARGO_HACK=true
USE_CARGO_MINIMAL_VERSIONS=false

# License compliance
CHECK_LICENSE_COMPLIANCE=true
ALLOWED_LICENSES="MIT,Apache-2.0,BSD-3-Clause"

# ----------------------------------------------------------------------------
# AI REFACTORING SETTINGS
# ----------------------------------------------------------------------------
AI_PROVIDER="claude"
AI_MODEL="claude-3-sonnet"
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.2
