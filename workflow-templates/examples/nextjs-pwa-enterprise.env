# ============================================================================
# NEXT.JS PWA ENTERPRISE CONFIGURATION
# ============================================================================
# Optimized for Progressive Web Apps with mobile deployment via Replit
# Target: Google Play Store deployment, enterprise scalability

# ----------------------------------------------------------------------------
# REPOSITORY CONFIGURATION
# ----------------------------------------------------------------------------
REPO_OWNER="Krosebrook"
REPO_NAME="intinc-universal-dashboard"
REPO_URL="https://github.com/${REPO_OWNER}/${REPO_NAME}.git"

# ----------------------------------------------------------------------------
# BRANCH CONFIGURATION
# ----------------------------------------------------------------------------
CURRENT_DEFAULT_BRANCH="main"
NEW_DEV_BRANCH="development"
NEW_PROD_BRANCH="production"
STAGING_BRANCH="main"

# ----------------------------------------------------------------------------
# PROJECT METADATA - NEXT.JS PWA
# ----------------------------------------------------------------------------
PROJECT_TYPE="pwa-nextjs"
PRIMARY_LANGUAGE="typescript"
BUILD_COMMAND="pnpm run build"
TEST_COMMAND="pnpm run test"
LINT_COMMAND="pnpm run lint"
TYPE_CHECK_COMMAND="pnpm run type-check"
E2E_TEST_COMMAND="pnpm run test:e2e"

# Additional Next.js specific commands
PWA_BUILD_COMMAND="pnpm run build:pwa"
MOBILE_BUILD_COMMAND="pnpm run build:mobile"
ANALYZE_COMMAND="pnpm run analyze"
LIGHTHOUSE_COMMAND="pnpm run lighthouse"

# ----------------------------------------------------------------------------
# PROTECTION LEVELS - ENTERPRISE GRADE
# ----------------------------------------------------------------------------
PROD_MIN_APPROVALS="2"                   # Production requires 2+ reviews
MAIN_MIN_APPROVALS="1"                   # Staging requires 1+ review
DEV_MIN_APPROVALS="0"                    # Development can be direct

# ----------------------------------------------------------------------------
# FEATURE FLAGS - ENTERPRISE SECURITY
# ----------------------------------------------------------------------------
ENABLE_SIGNED_COMMITS="true"
ENABLE_CODEOWNERS="true"
ENABLE_SECURITY_SCAN="true"
AUTO_DELETE_BRANCHES="true"
REQUIRE_LINEAR_HISTORY="true"            # Enforce linear history
ENABLE_DISCUSSIONS="true"
ENABLE_DEPENDABOT="true"
ENABLE_CODE_SCANNING="true"

# ----------------------------------------------------------------------------
# CI/CD CONFIGURATION - NEXT.JS OPTIMIZED
# ----------------------------------------------------------------------------
CI_PROVIDER="github-actions"
DEPLOY_DEV_URL="https://dev-intinc.replit.app"
DEPLOY_STAGING_URL="https://staging-intinc.vercel.app"
DEPLOY_PROD_URL="https://intinc.com"

# Deployment platforms
PRIMARY_DEPLOY_PLATFORM="vercel"         # Primary hosting
MOBILE_DEPLOY_PLATFORM="replit"          # Mobile builds via Replit
CDN_PROVIDER="cloudflare"                # CDN for assets
DATABASE_PROVIDER="supabase"             # Backend/DB

# ----------------------------------------------------------------------------
# PWA SPECIFIC SETTINGS
# ----------------------------------------------------------------------------
PWA_MANIFEST_NAME="IntInc Universal Dashboard"
PWA_SHORT_NAME="IntInc"
PWA_THEME_COLOR="#000000"
PWA_BACKGROUND_COLOR="#ffffff"
PWA_DISPLAY="standalone"
PWA_ORIENTATION="portrait"
PWA_SCOPE="/"
PWA_START_URL="/"

# Service Worker settings
SW_CACHE_STRATEGY="NetworkFirst"        # NetworkFirst|CacheFirst|StaleWhileRevalidate
SW_PRECACHE_ASSETS="true"
SW_OFFLINE_FALLBACK="true"

# ----------------------------------------------------------------------------
# MOBILE DEPLOYMENT - GOOGLE PLAY
# ----------------------------------------------------------------------------
MOBILE_PLATFORM="android"                # android|ios|both
ANDROID_PACKAGE_NAME="com.intinc.dashboard"
ANDROID_VERSION_CODE="1"
ANDROID_VERSION_NAME="1.0.0"
GOOGLE_PLAY_TRACK="internal"            # internal|alpha|beta|production

# TWA (Trusted Web Activity) settings
TWA_ENABLED="true"
TWA_LAUNCHER_NAME="IntInc Dashboard"
TWA_STATUS_BAR_COLOR="#000000"
TWA_NAVIGATION_BAR_COLOR="#ffffff"
TWA_SPLASH_SCREEN_FADE_OUT="300"

# ----------------------------------------------------------------------------
# PERFORMANCE & SCALABILITY
# ----------------------------------------------------------------------------
# Next.js optimization
NEXTJS_IMAGE_OPTIMIZATION="true"
NEXTJS_BUNDLE_ANALYZER="true"
NEXTJS_COMPRESSION="true"
NEXTJS_MINIFY="true"
NEXTJS_SWC_MINIFY="true"

# Performance budgets
PERFORMANCE_BUDGET_JS="200"              # KB
PERFORMANCE_BUDGET_CSS="50"              # KB
PERFORMANCE_BUDGET_IMAGE="500"           # KB
LIGHTHOUSE_MIN_SCORE="90"                # Minimum Lighthouse score

# Scalability settings
ENABLE_ISR="true"                        # Incremental Static Regeneration
ISR_REVALIDATE_TIME="60"                 # seconds
ENABLE_EDGE_FUNCTIONS="true"
ENABLE_MIDDLEWARE="true"
ENABLE_API_ROUTES="true"

# ----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# ----------------------------------------------------------------------------
MONITORING_PROVIDER="vercel-analytics"   # vercel-analytics|google-analytics|mixpanel
ERROR_TRACKING="sentry"                  # sentry|bugsnag|rollbar
LOGGING_PROVIDER="datadog"               # datadog|loggly|papertrail
APM_PROVIDER="new-relic"                 # new-relic|dynatrace|datadog

# ----------------------------------------------------------------------------
# NOTIFICATION SETTINGS
# ----------------------------------------------------------------------------
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
DISCORD_WEBHOOK_URL=""
EMAIL_NOTIFICATIONS="team@intinc.com"

# ----------------------------------------------------------------------------
# ADVANCED SETTINGS
# ----------------------------------------------------------------------------
PACKAGE_MANAGER="pnpm"                   # pnpm for speed and efficiency
NODE_VERSION="20"                        # Node.js 20 LTS
NEXTJS_VERSION="14"                      # Next.js 14+
REACT_VERSION="18"                       # React 18+
TYPESCRIPT_VERSION="5"                   # TypeScript 5+

# Build optimization
TURBOPACK_ENABLED="true"                 # Use Turbopack for faster builds
PARALLEL_BUILD="true"
BUILD_CACHE_ENABLED="true"

# Security
SECURITY_HEADERS="true"
CSP_ENABLED="true"
CORS_ORIGIN="https://intinc.com"
RATE_LIMITING="true"

# Database & Backend
DATABASE_URL="postgresql://..."
REDIS_URL="redis://..."
API_BASE_URL="https://api.intinc.com"

# Environment-specific URLs
DEV_DATABASE_URL="postgresql://localhost:5432/intinc_dev"
STAGING_DATABASE_URL="postgresql://staging.supabase.co:5432/intinc_staging"
PROD_DATABASE_URL="postgresql://prod.supabase.co:5432/intinc_prod"